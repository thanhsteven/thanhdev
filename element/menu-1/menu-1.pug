  button.menu-close
    i.fa.fa-close(aria-hidden="true")
  ul.menu-list
    each item in menu
      li.menu-item(data-toggle=item.child ? "sub-menu" : false) 
        .menu-wrapper
          a.menu-link(href=item.href rel=`noopener noreferrer ${item.follow}`)
            span.menu-text=item.text 
          if item.child 
            span.menu-icon 
              i.fa.fa-angle-down.menu-arrow(aria-hidden="true") 
        if item.child 
          ul.sub-menu 
            each child in item.child
              li.sub-menu-item
                a.sub-menu-link(href=child.sublink rel="noopener noreferrer")
                  img.sub-menu-image(src=child.subicon, alt=child.subtext, srcset=`${child.subicon} 2x`)
                  span.sub-menu-text=child.subtext 
